{
  "name": "design-system",
  "version": "0.0.1",
  "description": "Stencil Component Starter",
  "main": "./dist/index.cjs.js",
  "module": "./dist/index.js",
  "es2015": "dist/esm/index.mjs",
  "es2017": "dist/esm/index.mjs",
  "types": "dist/types/index.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "collection:main": "dist/collection/index.js",
  "unpkg": "dist/design-system/design-system.js",
  "files": [
    "dist/",
    "loader/"
  ],
  "scripts": {
    "build-watch": "stencil build --prod --docs --watch",
    "build": "stencil build --prod --docs --next",
    "start": "stencil build --dev --watch --serve --next",
    "test": "npm run test.spec && npm run test.e2e",
    "test.spec": "stencil test --spec",
    "test.e2e": "stencil test --e2e",
    "test.watch": "stencil test --spec --e2e --watchAll",
    "jest": "jest"
  },
  "dependencies": {
    "@ryancavanaugh/pkg1": "^3.0.2",
    "@ryancavanaugh/pkg2": "^3.0.2"
  },
  "devDependencies": {
    "@stencil/core": "^2.6.0",
    "@types/jest": "^25.1.4",
    "@types/puppeteer": "1.19.0",
    "chalk": "^3.0.0",
    "jest": "^25.1.0",
    "jest-cli": "^25.1.0",
    "puppeteer": "2.1.0",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-polyfills": "^0.1.2",
    "typescript": "^4.3.5"
  },
  "license": "MIT",
  "publishConfig": {
    "access": "private"
  }
}
